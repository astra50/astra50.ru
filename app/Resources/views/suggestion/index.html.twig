{% extends '::layout.html.twig' %}

{% set title = 'Предложения' %}

{% block content %}
    {% for suggestion in suggestions %}
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    {{ suggestion.type.name }}
                    от {{ suggestion.createdAt|localizeddate }}
                    автор {{ suggestion.name }}
                </h3>
            </div>
            <div class="panel-body">
                {{ suggestion.text }}
            </div>
            <div class="panel-footer">
                Контакты:
                <a href="tel:{{ suggestion.phone }}">{{ suggestion.phone }}</a>
                <a href="mailto:{{ suggestion.email }}">{{ suggestion.email }}</a>
            </div>
        </div>
    {% else %}
        <div class="jumbotron">
            <h1>Обращение пока не поступало</h1>
        </div>
    {% endfor %}

    {% if suggestions.haveToPaginate %}
        <div class="text-center">
            {{ pagerfanta(news, 'twitter_bootstrap3_translated', { routeName: 'suggestions_index_paginated' }) }}
        </div>
    {% endif %}
{% endblock %}
