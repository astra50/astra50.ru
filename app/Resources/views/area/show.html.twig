{% extends '::layout.html.twig' %}

{% block content %}
    <h1>Участок №{{ area.number }}</h1>

    <dl class="dl-horizontal">
      <dt>Количество соток</dt>
      <dd>{{ area.size }}</dd>
    </dl>

    <h2>Платежи</h2>

    {% if 0 < pagerfanta.count %}
        <table class="table">
            <thead>
            <tr>
                <th>Наименование</th>
                <th>Сумма (руб.)</th>
                <th>Дата создания</th>
            </tr>
            </thead>
            <tbody>
            {% for item in pagerfanta.currentPageResults %}
                <tr>
                    <td>{{ item.paymentType.name }}</td>
                    <td>{{ (item.sum / 100)|number_format }}</td>
                    <td>{{ item.createdAt|localizeddate }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            {{ pagerfanta(pagerfanta) }}
        </div>
    {% else %}
        <div class="jumbotron">
            <h2>Записей нет</h2>
        </div>
    {% endif %}
{% endblock %}
