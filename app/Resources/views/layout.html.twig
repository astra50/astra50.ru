{% extends '::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-12" style="display: table;">
                <div class="pull-left">
                    <a href="{{ path('homepage') }}">
                        <img src="{{ sandbox ? asset('bundles/sandbox/img/astra_logo.png') : asset('assets/img/astra_logo.png') }}"
                             height="80" alt="СНТ Астра">
                    </a>

                    Подольский район, Московская область
                </div>

                <div class="pull-right" style="min-height: 80px;padding-top: 30px">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <a href="{{ path('account') }}">{{ app.user.realname }}</a>
                        |
                        <a href="{{ path('fos_user_security_logout') }}">Выход</a>
                    {% else %}
                        <a href="{{ path('fos_user_security_login') }}">Вход</a>
                    {% endif %}
                </div>
            </div>
        </div>

        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                            aria-expanded="false"
                            aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% if is_granted('ROLE_ADMIN') %}
                        {% set brand = 'Адинистратор' %}
                    {% elseif is_granted(constant('AppRoles::CASHIER')) %}
                        {% set brand = 'Кассир' %}
                    {% elseif is_granted(constant('AppRoles::CHAIRMAN')) %}
                        {% set brand = 'Председатель' %}
                    {% else %}
                        {% set brand = 'Менеджер' %}
                    {% endif %}
                    {#<a class="navbar-brand">{{ brand }}</a>#}
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    {{ knp_menu_render('main') }}

                    {% if is_granted(constant('AppRoles::EMPLOYEE')) %}


                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                               aria-haspopup="true" aria-expanded="false">
                                Управление <span class="caret"></span>
                            </a>
                            {{ knp_menu_render('manager', {'attr': {'class': 'dropdown-menu'}}) }}
                        </li>
                    </ul>

                </div>
                {% endif %}
            </div>
        </nav>

        {% if app.request.hasPreviousSession %}
            {% set messages = app.session.flashbag.all() %}

            {% if messages is not empty %}
                <div class="row" style="margin-top: 30px">
                    <div class="col-md-8 col-md-offset-2">
                        {% for type, messages in messages %}
                            {% for message in messages %}
                                {% set types = {success: 'success', error: 'danger', info: 'info', warning: 'warning'} %}
                                {% set prefix = {success: 'Успешно', error: 'Ошибка', info: 'Информация', warning: 'Внимание'} %}

                                <div class="alert alert-{{ attribute(types, type) }}" role="alert">
                                    <strong>{{ attribute(prefix, type) }}!</strong> {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endif %}

        <hr>

        {% block content %}{% endblock %}

        <footer class="footer">
            <p>&copy; {{ 'now'|date('Y') }} СНТ Астра</p>
        </footer>
    </div>
{% endblock %}
