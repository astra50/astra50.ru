{% extends '::layout.html.twig' %}

{% block content %}
    <h1>Типы платежей</h1>

    <hr>

    {% if 0 < pagerfanta.count %}
        <table class="table ">
            <thead>
            <tr>
                <th>Наименование</th>
                <th>Сумма (руб.)</th>
                <th>Расписание</th>
                <th>Начисление</th>
                <th>Дата создания</th>
                <th>Дата архивации</th>
            </tr>
            </thead>
            <tbody>
            {% for item in pagerfanta.currentPageResults %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>{{ (item.sum / 100)|number_format }}</td>
                    <td>{{ item.schedule|payment_schedule }}</td>
                    <td>{{ item.calculation|payment_calculation }}</td>
                    <td>{{ item.createdAt|localizeddate }}</td>
                    <td>{{ item.archivedAt ? item.archivedAt|localizeddate : '-' }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-center">
            {{ pagerfanta(pagerfanta) }}
        </div>
    {% else %}
        <div class="jumbotron">
            <h2>Записей нет</h2>
        </div>
    {% endif %}
{% endblock %}
