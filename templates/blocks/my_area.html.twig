{% set areas = app.user.areas %}

{% if 1 == areas|length %}
    {% set area = areas|first %}
    <li>
        <a href="{{ path('area_show', {'number': area.number}) }}">Мой участок</a>
    </li>
{% elseif 1 < areas|length %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            Мои участки<span class="caret"></span>
        </a>

        <ul class="dropdown-menu">
            {% for area in areas %}
                <li>
                    <a href="{{ path('area_show', {'number': area.number}) }}">Участок
                        №{{ area.number }}</a>
                </li>
            {% endfor %}
        </ul>
    </li>
{% endif %}
